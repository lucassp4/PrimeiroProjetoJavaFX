<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="Controller.PrincipalController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane fx:id="panePrincipal" prefHeight="600.0" prefWidth="800.0">
         <children>
            <BorderPane layoutX="1.0" layoutY="1.0" prefHeight="665.0" prefWidth="825.0">
               <top>
                  <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                      <Menu fx:id="AbrirCadastroPessoa" mnemonicParsing="false" text="Arquivo">
                        <items>
                          <MenuItem mnemonicParsing="false" text="_Fechar" onAction="#onExit"/>
                        </items>
                      </Menu>
                        <Menu mnemonicParsing="false" text="Cadastro">
                          <items>
                              <MenuItem fx:id="CadastroPessoa" mnemonicParsing="false" onAction="#AbrirCadastroPessoa" text="Cadastrar Pessoas" />
                            <MenuItem fx:id="cadastroPet" mnemonicParsing="false" text="Cadastrar Pets" />
                          </items>
                        </Menu>
                      <Menu mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem mnemonicParsing="false" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
               </top>
               <center>
                  <Pane fx:id="paneCenterPrincipal" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </children>
      </Pane>
   </children>
</GridPane>
